                "tags": [
                    "todos"
                ],
                "summary": "Создать новую задачу",
                "parameters": [
                    {
                        "type": "string",
                        "description": "JWT-токен",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "Новая задача",
                        "name": "todo",
