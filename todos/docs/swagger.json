                            "$ref": "#/definitions/responses.httpError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/responses.httpError"
                        }
                    },
                    "403": {
                        "description": "Forbidden",
